{
  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  },
  "Connection": {
    "ConnStringSQLite": "@APPDATA@/Alchemed.Api/@APIKEY@/",
    "ConnStringAzure": "",
    "ConnStringSQLExpress": "",
    "ConnStringMySQL": "",
    "ConnStringPostgreSQL": "",
    "DBType": "SQLITE",
    // DBType can be any of SQLITE, SQLSERVER, SQLEXPRESS, MYSQL, POSTGRESQL
    "SQLiteDropDB": false,
    // If SQLiteDropDB is true and DBType is SQLITE then the SQLite Data file will be deleted
    "SQLiteInMemoryMode": false
  },

  "DatabaseTenant": {
    "Code": "TR1",
    "Name": "Web API"
  },

  "DataModel": {
    "Assembly": "Alchemed.DataModel.dll",
    "NameSpace": "Alchemed.DataModel"
  },

  "ApiFeatures": {
    "RequireApiAuthorisation": true,
    "IncludeFileStorage": true,
    "IncludeSampleDatagenerator": false,
    "FileStorageLocation": "@APPDATA@/Alchemed.Api/@APIKEY@/"
  }
}
